    if(className)
        picture
            source(data-srcset="./static/images/global/" + path + ".webp", type="image/webp")
            img(data-src="./static/images/global/" + path + "." + ext, alt="" + alt, class="lazy " + className)
    else
        picture
            source(data-srcset="./static/images/global/" + path + ".webp", type="image/webp")
