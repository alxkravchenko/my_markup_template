//- webp pictures
//- /////////////
mixin picg(path, ext, alt, className)
    if(className)
        picture
            source(srcset="./static/images/global/" + path + ".webp", type="image/webp")
            img(src="./static/images/global/" + path + "." + ext, alt="" + alt, class="" + className)
    else
        picture
            source(srcset="./static/images/global/" + path + ".webp", type="image/webp")
            img(src="./static/images/global/" + path + "." + ext, alt="" + alt)

mixin picc(path, ext, alt, className)
