//- svg icon
//- ////////////////
mixin icon(name,mod)
    if(mod)
        svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
            use(xlink:href="./static/images/sprite/sprite.svg#" + name)
    else
        svg
            use(xlink:href="./static/images/sprite/sprite.svg#" + name)
